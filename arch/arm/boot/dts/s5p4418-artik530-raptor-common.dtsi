#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/input/input.h>
#include "s5p4418-artik530.dtsi"

#define PMIC_PDATA_INIT(_id, _rname, _minuv,	\
			_maxuv, _always_on, _boot_on,		\
			_init_uv, _init_enable, _set_init_uV, _slp_slots)\
		regulator-name = _rname;		\
		regulator-min-microvolt = <_minuv>;	\
		regulator-max-microvolt = <_maxuv>;	\
		regulator-always-on = <_always_on>;	\
		regulator-boot-on = <_boot_on>;		\
		nx,id = <_id>;				\
		nx,init_enable = <_init_enable>;	\
		nx,init_uV = <_init_uv>;		\
		nx,set_init_uV = <_set_init_uV>;	\
		nx,sleep_slots = <_slp_slots>;

/ {
	model = "Samsung artik530 raptor board based on s5p4418";
	compatible = "samsung,artik530-raptor", "samsung,artik530",
		   "nexell,s5p4418";

	aliases {
		i2c3 = &i2c_gpio3;
		i2c6 = &i2c_gpio6;
		i2c7 = &i2c_gpio7;
	};

	soc {

		serial3:serial@c00a3000 {
			status ="okay";
		};

		dw_mmc_0:dw_mmc@c0062000 {
			num-slots = <1>;
			bus-width = <4>;
			cap-sd-highspeed;
			clock-frequency = <100000000>;
			card-detect-delay = <200>;
			disable-wp;
			cd-gpios = <&gpio_b 16 0>;
			cd-inverted;
			nexell,drive_dly = <0x0>;
			nexell,drive_shift = <0x02>;
			nexell,sample_dly = <0x00>;
			nexell,sample_shift = <0x01>;
			status = "okay";
		};

		nexell_usbphy: nexell-usbphy@c0012000 {
			status = "okay";
		};

		ehci@c0030000 {
			samsung,vbus-gpio = <&gpio_a 16 0>;
			status = "okay";
			port@0 {
				status = "okay";
			};
			port@1 {
				status = "okay";
			};
		};

		ohci@c0020000 {
			status = "okay";
			port@0 {
				status = "okay";
			};
		};

		dwc2otg@c0040000 {
			gpios = <&gpio_a 15 0>;
			status = "okay";
		};

		pinctrl@C0010000 {
			key_up:key_up {
				nexell,pins = "gpioa-26";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_down:key_down {
				nexell,pins = "gpioa-27";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_back:key_back {
				nexell,pins = "gpioa-25";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_pwr:key_pwr {
				nexell,pins = "alive-0";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_home:key_home {
				nexell,pins = "gpiod-28";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};

			key_menu:key_menu {
				nexell,pins = "gpioa-0";
				nexell,pin-function = <0>;
				nexell,pin-pull = <1>;
				nexell,pin-strength = <0>;
			};
		};

		adc:adc@c0053000 {
			status = "okay";
		};

		gmac0:ethernet@c0060000 {
			pinctrl-names = "default";
			pinctrl-0 = <&gmac_pins>;

			status = "okay";
			#address-cells = <0x1>;
			#size-cells = <0x0>;

			snps,phy-addr = <3>;
			snps,reset-gpio = <&gpio_a 12 0>;
			snps,reset-active-low;
			snps,reset-delays-us = <0 10000 30000>;

			phy-handle = <&ethernet_phy>;

			ethernet_phy:ethernet-phy@3 {
				compatible = "ethernet-phy-ieee802.3-c45";
				reg = <3>;
				device_type = "ethernet-phy";
			};
		};

		i2s_0:i2s@c0055000 {
			master-mode = <1>;
			mclk-in = <0>;
			trans-mode = <0>;
			frame-bit = <32>;
			sample-rate = <48000>;
			pre-supply-mclk = <1>;
			status = "okay";
		};

		i2c_gpio3: i2c@3 {
			compatible = "i2c-gpio";
			gpios = <&gpio_c 16 0	/* SDA */
					&gpio_c 15 0		/* SCL */
					>;
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			nxe1500@33 {
				compatible = "nexell,nxe1500";
				reg = <0x33>;
				interrupt-parent = <&alive_0>;
				interrupts = <0x5 IRQ_TYPE_EDGE_FALLING>;
			};
		};

		regulators {
			VCC_DCDC0:dcdc1
					{ PMIC_PDATA_INIT( 0,
					"nxe2000_dcdc1",
					900000, 1500000,
					1, 1, 1250000,
					1, 0, 0x4) };
			VCC_DCDC1:dcdc2
					{ PMIC_PDATA_INIT( 1,
					"nxe2000_dcdc2",
					1000000, 1500000,
					1, 1, 1100000,
					1, 0, 0x4) };
			VCC_DCDC2:dcdc3
					{ PMIC_PDATA_INIT( 2,
					"nxe2000_dcdc3",
					1000000, 1800000,
					1, 1, 1500000,
					1, 0, 0x4) };
			VCC_DCDC3:dcdc4
					{ PMIC_PDATA_INIT( 3,
					"nxe2000_dcdc4",
					1000000, 1800000,
					1, 1, 1500000,
					1, 0, 0xF) };
			VCC_LDO0:ldo1
					{ PMIC_PDATA_INIT( 5,
					"nxe2000_ldo1",
					1000000, 3500000,
					1, 1, 3300000,
					1, 1, 0x0) };
			VCC_LDO1:ldo2
					{ PMIC_PDATA_INIT( 6,
					"nxe2000_ldo2",
					1000000, 3500000,
					1, 1, 1800000,
					1, 1, 0x2) };
			VCC_LDO2:ldo3
					{ PMIC_PDATA_INIT( 7,
					"nxe2000_ldo3",
					1000000, 3500000,
					1, 1, 3300000,
					1, 1, 0x0) };
			VCC_LDO3:ldo4
					{ PMIC_PDATA_INIT( 8,
					"nxe2000_ldo4",
					1000000, 3500000,
					0, 0, 1200000,
					0, 1, 0x2) };
			VCC_LDO4:ldo5
					{ PMIC_PDATA_INIT( 9,
					"nxe2000_ldo5",
					1000000, 3500000,
					0, 0, 3300000,
					0, 1, 0x0) };
			VCC_RTC0:ldortc1
					{ PMIC_PDATA_INIT(15,
					"nxe2000_rtc1",
					1700000, 3500000,
					1, 1, 1800000,
					1, 1, 0xF) };
			VCC_RTC1:ldortc2
					{ PMIC_PDATA_INIT(16,
					"nxe2000_rtc2",
					1000000, 3500000,
					1, 1, 1000000,
					1, 1, 0xF) };
		}; /* regulators */
	};	/*** soc ***/

	i2c_gpio6:i2c@6 {
		compatible = "i2c-gpio";
		gpios = <&gpio_a 5 0 /* sda */
			&gpio_a 4 0 /* scl */
			>;
		i2c-gpio,delay-us = <100>;
		#address-cells = <1>;
		#size-cells = <0>;

		alc5658: alc5658@1a {
			compatible = "realtek,rt5658";
			reg = <0x1a>;
		};
	};

	i2c_gpio7:i2c@7 {
		compatible = "i2c-gpio";
		gpios = <&gpio_a 24 0 /* sda */
			&gpio_a 23 0 /* scl */
			>;
		i2c-gpio,delay-us = <100>;
		#address-cells = <1>;
		#size-cells = <0>;
	};

	sound {
		compatible = "nexell,nexell-alc5658";
		ch = <0>;
		sample-rate = <48000>;
		format = "S16";
		hpin-support = <0>;
		nexell,i2s-controller = <&i2s_0>;
		audio-codec = <&alc5658>;
	};

	gpio_keys {
		compatible = "gpio-keys";
		#address-cells = <1>;
		#size-cells = <0>;
		pinctrl-names = "default";
		pinctrl-0 = <&key_up &key_down &key_back
				&key_pwr &key_home &key_menu>;

		up {
			label = "Up";
			gpios = <&gpio_a 26 1>;
			linux,code = <KEY_UP>;
		};

		down {
			label = "Down";
			gpios = <&gpio_a 27 1>;
			linux,code = <KEY_DOWN>;
		};

		back {
			label = "Back";
			gpios = <&gpio_a 25 1>;
			linux,code = <KEY_BACK>;
		};

		power {
			label = "Power";
			gpios = <&alive_0 0 1>;
			linux,code = <KEY_POWER>;
			gpio-key,wakeup;
		};

		home {
			label = "Home";
			gpios = <&gpio_d 28 1>;
			linux,code = <KEY_HOME>;
		};

		menu {
			label = "Menu";
			gpios = <&gpio_a 0 1>;
			linux,code = <KEY_MENU>;
		};
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm2_pin>;
	samsung,pwm-outputs = <2>;
	status = "okay";
};

&serial1 {
	status = "okay";
	pinctrl-0 = <&serial1_pin>, <&serial1_flow_cts>, <&serial1_flow_rts>;
};

&serial4 {
	status = "okay";
};

&spi_0 {
	status = "okay";
	cs-gpios = <&gpio_c 30 0>;
	spidev@0 {
		compatible = "linux,spidev";
		reg = <0>;
		spi-max-frequency = <10000000>;
		controller-data {
			samsung,spi-feedback-delay = <0>;
		};
	};
};

&dp_drm {
	status = "okay";
	ports {
		port@0 {
			reg = <0>;
			back_color = < 0x0 >;
			color_key = < 0x0 >;
			plane-names = "video", "primary", "rgb";
		};
		port@1 {
			reg = <1>;
			back_color = < 0x0 >;
			color_key = < 0x0 >;
			plane-names = "video", "primary";
		};
	};
};

&dp_drm_mipi {
	hs_bitrate = <960>;
	lp_bitrate = <100>;
	status = "ok";

	panel@0 {
		compatible = "samsung,s6e8fa0";
		reg = <0>;
		vdd3-supply = <&VCC_LDO0>;
		vci-supply = <&VCC_LDO1>;
		reset-gpio = <&gpio_e 30 0>;
		power-on-delay= <50>;
		reset-delay = <100>;
		init-delay = <100>;
		display-timings {
			timing-0 {
				clock-frequency = <130361520>;
				hactive = <1080>;
				vactive = <1920>;
				hfront-porch = <32>;
				hback-porch = <16>;
				hsync-len = <12>;
				vfront-porch = <12>;
				vback-porch = <3>;
				vsync-len = <1>;
			};
		};
	};

	dp_control {
		clk_src_lv0 = <0>;
		clk_div_lv0 = <6>;
		clk_src_lv1 = <7>;
		clk_div_lv1 = <1>;
		out_format = <3>;
		vs_start_offset = <480>;
		ev_start_offset = <480>;
		vs_end_offset = <0>;
		ev_end_offset = <0>;
	};
};

&dp_drm_hdmi {
	ddc-i2c-bus = <&i2c_gpio7>;
	enable-gpios = <&gpio_a 21 0>;
	status = "ok";
};
