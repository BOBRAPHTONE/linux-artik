#include <dt-bindings/interrupt-controller/irq.h>
#include <dt-bindings/input/input.h>
#include "s5p4418-artik530.dtsi"

#define PMIC_PDATA_INIT(_id, _rname, _minuv,	\
			_maxuv, _always_on, _boot_on,		\
			_init_uv, _init_enable, _set_init_uV, _slp_slots)\
		regulator-name = _rname;		\
		regulator-min-microvolt = <_minuv>;	\
		regulator-max-microvolt = <_maxuv>;	\
		regulator-always-on = <_always_on>;	\
		regulator-boot-on = <_boot_on>;		\
		nx,id = <_id>;				\
		nx,init_enable = <_init_enable>;	\
		nx,init_uV = <_init_uv>;		\
		nx,set_init_uV = <_set_init_uV>;	\
		nx,sleep_slots = <_slp_slots>;

/ {
	model = "Samsung artik530 raptor board based on s5p4418";
	compatible = "samsung,artik530-raptor", "samsung,artik530",
		   "nexell,s5p4418";

	aliases {
		i2c4 = &i2c_gpio4;
		i2c6 = &i2c_gpio6;
	};

	soc {
		serial3:serial@c00a3000 {
			status ="okay";
		};

		dw_mmc_0:dw_mmc@c0062000 {
			num-slots = <1>;
			bus-width = <4>;
			cap-sd-highspeed;
			clock-frequency = <100000000>;
			card-detect-delay = <200>;
			disable-wp;
			cd-gpios = <&gpio_b 16 0>;
			cd-inverted;
			nexell,drive_dly = <0x0>;
			nexell,drive_shift = <0x02>;
			nexell,sample_dly = <0x00>;
			nexell,sample_shift = <0x01>;
			status = "okay";
		};

		nexell_usbphy: nexell-usbphy@c0012000 {
			status = "okay";
		};

		ehci@c0030000 {
			samsung,vbus-gpio = <&gpio_a 16 0>;
			status = "okay";
			port@0 {
				status = "okay";
			};
			port@1 {
				status = "okay";
			};
		};

		ohci@c0020000 {
			status = "okay";
			port@0 {
				status = "okay";
			};
		};

		dwc2otg@c0040000 {
			gpios = <&gpio_a 15 0>;
			status = "okay";
		};

		i2s_0:i2s@c0055000 {
			master-mode = <1>;
			mclk-in = <0>;
			trans-mode = <0>;
			frame-bit = <32>;
			sample-rate = <48000>;
			pre-supply-mclk = <1>;
			status = "okay";
		};

		i2c_gpio3: i2c@3 {
			compatible = "i2c-gpio";
			gpios = <&gpio_c 16 0	/* SDA */
					&gpio_c 15 0		/* SCL */
					>;
			#address-cells = <1>;
			#size-cells = <0>;
			status = "okay";

			nxe1500@33 {
				compatible = "nexell,nxe1500";
				reg = <0x33>;
				interrupt-parent = <&alive_0>;
				interrupts = <0x5 IRQ_TYPE_EDGE_FALLING>;
			};
		};

		regulators {
			VCC_DCDC0:dcdc1
					{ PMIC_PDATA_INIT( 0,
					"nxe2000_dcdc1",
					900000, 1500000,
					1, 1, 1250000,
					1, 0, 0x4) };
			VCC_DCDC1:dcdc2
					{ PMIC_PDATA_INIT( 1,
					"nxe2000_dcdc2",
					1000000, 1500000,
					1, 1, 1100000,
					1, 0, 0x4) };
			VCC_DCDC2:dcdc3
					{ PMIC_PDATA_INIT( 2,
					"nxe2000_dcdc3",
					1000000, 1800000,
					1, 1, 1500000,
					1, 0, 0x4) };
			VCC_DCDC3:dcdc4
					{ PMIC_PDATA_INIT( 3,
					"nxe2000_dcdc4",
					1000000, 1800000,
					1, 1, 1500000,
					1, 0, 0xF) };
			VCC_LDO0:ldo1
					{ PMIC_PDATA_INIT( 5,
					"nxe2000_ldo1",
					1000000, 3500000,
					1, 1, 3300000,
					1, 1, 0x0) };
			VCC_LDO1:ldo2
					{ PMIC_PDATA_INIT( 6,
					"nxe2000_ldo2",
					1000000, 3500000,
					1, 1, 1800000,
					1, 1, 0x2) };
			VCC_LDO2:ldo3
					{ PMIC_PDATA_INIT( 7,
					"nxe2000_ldo3",
					1000000, 3500000,
					1, 1, 3300000,
					1, 1, 0x0) };
			VCC_LDO3:ldo4
					{ PMIC_PDATA_INIT( 8,
					"nxe2000_ldo4",
					1000000, 3500000,
					0, 0, 1200000,
					0, 1, 0x2) };
			VCC_LDO4:ldo5
					{ PMIC_PDATA_INIT( 9,
					"nxe2000_ldo5",
					1000000, 3500000,
					0, 0, 3300000,
					0, 1, 0x0) };
			VCC_RTC0:ldortc1
					{ PMIC_PDATA_INIT(15,
					"nxe2000_rtc1",
					1700000, 3500000,
					1, 1, 1800000,
					1, 1, 0xF) };
			VCC_RTC1:ldortc2
					{ PMIC_PDATA_INIT(16,
					"nxe2000_rtc2",
					1000000, 3500000,
					1, 1, 1000000,
					1, 1, 0xF) };
		}; /* regulators */
	};	/*** soc ***/

	i2c_gpio6:i2c@6 {
		compatible = "i2c-gpio";
		gpios = <&gpio_a 5 0 /* sda */
			&gpio_a 4 0 /* scl */
			>;
		i2c-gpio,delay-us = <100>;
		#address-cells = <1>;
		#size-cells = <0>;

		alc5658: alc5658@1a {
			compatible = "realtek,rt5658";
			reg = <0x1a>;
		};
	};

	sound {
		compatible = "nexell,nexell-alc5658";
		ch = <0>;
		sample-rate = <48000>;
		format = "S16";
		hpin-support = <0>;
		nexell,i2s-controller = <&i2s_0>;
		audio-codec = <&alc5658>;
	};

	i2c_gpio4: i2c@4 {
		compatible = "i2c-gpio";
		gpios = <&gpio_d 18 0 /* sda */
			&gpio_d 14 0 /* scl */
			>;
		i2c-gpio,delay-us = <100>;    /* ~100 kHz */
		#address-cells = <1>;
		#size-cells = <0>;

		usb3503: usb3503@08 {
			compatible = "smsc,usb3503";
			reg = <0x08>;
			intn-gpios = <&gpio_b 23 0>;
			connect-gpios = <&gpio_a 18 0>;
			reset-gpios = <&gpio_a 22 0>;
			initial-mode = <1>;
		};
	};
};

&pwm {
	pinctrl-names = "default";
	pinctrl-0 = <&pwm2_pin>;
	samsung,pwm-outputs = <2>;
	status = "okay";
};

&serial1 {
	status = "okay";
	pinctrl-0 = <&serial1_pin>, <&serial1_flow_cts>, <&serial1_flow_rts>;
};

&serial4 {
	status = "okay";
};
